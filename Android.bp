cc_binary {
    name: "IHelloClient",
    srcs: ["src/HelloClient.cpp" ,"gen/*.cpp"],
    include_dirs: [ "AIDLCppDemo/include/", "AIDLCppDemo/gen/include/" ],
    shared_libs: [
        "liblog",
        "libcutils",
        "libutils",
        "libbinder",
    ],
}


cc_binary {
    name: "IHelloServer",
    srcs: ["src/HelloServerMain.cpp", "src/HelloServer.cpp" ,"gen/*.cpp"],
    include_dirs: [ "AIDLCppDemo/include/", "AIDLCppDemo/gen/include/" ],
    shared_libs: [
        "liblog",
        "libcutils",
        "libutils",
        "libbinder",
    ],
}


cc_fuzz {
    name: "FuzzHelloServer",
    include_dirs: [ "AIDLCppDemo/include/", "AIDLCppDemo/gen/include/" ],
    defaults: [
        "service_fuzzer_defaults",
    ],
    static_libs: [
        "libbase",
        "liblog",
        "libbinder_random_parcel",
    ],
    shared_libs: [
        "liblog",
        "libcutils",
        "libutils",
        "libbinder",
    ],
    srcs: ["src/FuzzHelloServer.cpp", "src/HelloServer.cpp" ,"gen/*.cpp"],
    fuzz_config: {
        cc: [
            "somebody@google.com",
        ],
    },
}


cc_fuzz {
    name: "AutogenFuzzer",
    include_dirs: [ "AIDLCppDemo/include/", "AIDLCppDemo/gen/include/" ],
    defaults: [
        "service_fuzzer_defaults",
    ],
    static_libs: [
        "libbase",
        "liblog",
        "libbinder_random_parcel",
    ],
    shared_libs: [
        "liblog",
        "libcutils",
        "libutils",
        "libbinder",
    ],
    srcs: ["src/FuzzHelloServerAutogen.cpp", "src/Autogen.cpp", "src/HelloServer.cpp" ,"gen/*.cpp"],
    fuzz_config: {
        cc: [
            "somebody@google.com",
        ],
    },
}

